<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    tools:context=".NavDrawerFragment">

    <LinearLayout
        android:id="@+id/navDrawerImgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FB8C00">
        <ImageView
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:contentDescription="Dummy Desc"
            android:src="@drawable/ic_abstract"
            android:layout_marginBottom="@dimen/nav_drawer_margin_bottom"
            android:layout_marginTop="@dimen/nav_drawer_margin_top" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/navDrawerImgLayout"
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>